{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES5",
    "lib": [
      "es5",
      "es6",
    ],
    "declaration": true,
    "strictNullChecks": true,
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "src/**/*",
  ]
}